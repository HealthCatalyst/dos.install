{
    "$schema": "https://raw.githubusercontent.com/HealthCatalyst/dos.install/master/templates/schema.json",
    "name": "Fabric Realtime",
    "version": "4.0.0.2",
    "secrets": {
        "password": [
            "mysqlrootpassword",
            "mysqlpassword",
            "certpassword",
            "rabbitmqmgmtuipassword"
        ],
        "value": [{
            "name": "certhostname",
            "valueFromSecret": {
                "name": "dnshostname",
                "namespace": "default"
            }
        }]
    },
    "ports": [
        {
            "name": "Mirth",
            "port": 6661,
            "protocol": "tcp",
            "type": "external"
        },
        {
            "name": "RabbitMq",
            "port": 5671,
            "protocol": "tcp",
            "type": "external"            
        },
        {
            "name": "MySql",
            "port": 3307,
            "protocol": "tcp",
            "type": "internal"
        }
    ],
    "resources": {
        "dns": [],
        "configmaps": [],
        "roles": [],
        "volumes": {
            "onprem": [
                "certificateserver.yaml",
                "mysqlserver.yaml",
                "rabbitmq-cert.yaml",
                "rabbitmq.yaml"
            ],
            "azure": [
                "certificateserver.yaml",
                "mysqlserver.yaml",
                "rabbitmq-cert.yaml",
                "rabbitmq.yaml"
            ]
        },
        "volumeclaims": [
            "certificateserver.yaml",
            "mysqlserver.yaml",
            "rabbitmq-cert.yaml",
            "rabbitmq.yaml"
        ],
        "pods": [
            "certificateserver.yaml",
            "mysqlserver.yaml",
            "interfaceengine.yaml",
            "rabbitmq.yaml"
        ],
        "services": {
            "cluster": [
                "certificateserver.yaml",
                "mysqlserver.yaml",
                "interfaceengine.yaml",
                "rabbitmq.yaml"
            ],
            "external": [
                "certificateserver.yaml",
                "rabbitmq.yaml",
                "interfaceengine.yaml"
            ]
        },
        "ingress": {
            "http": [
                "web.yaml",
                "rabbitmq.yaml",
                "interfaceengine.yaml"
            ],
            "tcp": {
                "azure": [
                    "mysqlserver.yaml",
                    "interfaceengine.yaml",
                    "rabbitmq.yaml"                    
                ],
                "onprem":[
                    "mysqlserver.yaml",
                    "interfaceengine.yaml",
                    "rabbitmq.yaml"
                ]
            }
        }
    }
}